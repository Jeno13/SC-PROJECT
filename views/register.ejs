<form method="post">
    <a href="/">
        <img class="mb-4" src="./images/lock-finger-icon.svg" alt="lock icon" height="75">
    </a>
    <h1 class="h5 mb-3 fw-normal text-muted">Register an account</h1>

    <div class="form-floating">
        <input type="name" name="name" class="form-control" id="floatingName" placeholder="John doe" required>
        <label for="floatingName">Name</label>
    </div>
    <div class="form-floating">
        <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required>
        <label for="floatingEmail">Email address</label>
    </div>
    <div class="form-floating">
        <input type="text" pattern="[0-9]+" name="mobile" class="form-control" id="floatingMobile" placeholder="002xxxxxx" required title="please enter valid mobile format">
        <label for="floatingMobile">Mobile number</label>
    </div>
    <div class="form-floating">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword">Password</label>
    </div>
    <div class="form-floating">
        <select name="type" class="form-control" id="floatingType" required>
            <option value="student">Student</option>
            <option value="sponsor">Sponsor</option>
        </select>
        <label for="floatingType">Type</label>
    </div>
    <button class="w-100 btn btn-lg btn-dark mt-4" type="submit">Register</button>
    <p class="mt-3 mb-0 text-muted">Have an account? <a href="/login" class="text-black">login</a></p>

    <% if(typeof errors !== 'undefined' && Object.keys(errors).length !== 0){ %>
        <div class="alert alert-danger mt-3 mb-3" role="alert">
            <% Object.entries(errors).forEach(([key, value])=> { %>
                <p><%= value %></p>
            <% }); %>
        </div>
    <% } %>
</form>