<form method="post">
    <a href="/">
        <img class="mb-4" src="./images/lock-icon.svg" alt="lock icon" height="75">
    </a>
    <h1 class="h5 mb-3 fw-normal text-muted">Login to your account</h1>

    <div class="form-floating">
        <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
        <label for="floatingEmail">Email address</label>
    </div>
    <div class="form-floating">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword">Password</label>
    </div>

    <button class="w-100 btn btn-lg btn-dark mt-4" type="submit">Login</button>
    <p class="mt-3 mb-0 text-muted">Don't have an account? <a href="/register" class="text-black">register</a></p>

    <% if(typeof errors !== 'undefined' && Object.keys(errors).length !== 0){ %>
        <div class="alert alert-danger mt-3 mb-3" role="alert">
            <% Object.entries(errors).forEach(([key, value])=> { %>
                <p><%= value %></p>
            <% }); %>
        </div>
    <% } %>
</form>